{
  "name": "template-editor",
  "version": "0.1.9",
  "description": "A React-based template editor with rich text editing capabilities.",
  "private": true,
  "dependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "quill-delta": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-quill-new": "^3.6.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write .",
    "prebuild": "yarn version --patch",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "yarn build && gh-pages -d dist",
    "prepare": "husky"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@vitejs/plugin-react": "^4.7.0",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tailwindcss": "^3.4.17",
    "vite": "^6.3.5"
  }
}
